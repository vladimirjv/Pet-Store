{
    "compilerOptions": {
        // "module": "commonjs",
        // "declaration": true,
        // "removeComments": true,
        // "emitDecoratorMetadata": true,
        // "experimentalDecorators": true,
        // "target": "es2017",
        // "sourceMap": true,
        // "allowJs": true,
        // "outDir": "./dist",
        // "baseUrl": "./",
        // "incremental": true
        "resolveJsonModule": true,
        "module": "commonjs",
        "declaration": false,
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "allowSyntheticDefaultImports": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "ES2017",
        "sourceMap": true,
        "allowJs": true,
        "outDir": "./dist",
        "incremental": true,
        "baseUrl": "./",
        "paths": {
            "~/*": [
                "./src/*",
                "src/*"
            ],
            "@static/*": ["./src/assets/*"]
            // "~static": ["./static/*"],
        }
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "assets"
    ]
}
